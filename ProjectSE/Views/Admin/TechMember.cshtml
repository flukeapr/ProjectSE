@model IEnumerable<ProjectSE.Models.Technician>

@{
    ViewBag.Title = "TechMember";
    Layout = "~/Views/Shared/ViewAdmin_Layout.cshtml";
}
<html>
<head>

    <link href="~/Content/TechMember.css" rel="stylesheet" />
    

    <style>
        body {
            margin: 0;
            overflow: hidden;
        }

        .topic {
            display: flex;
            align-items: center;
            margin-top: 80px;
            text-align: center;
        }

            .topic h2 {
                color: black;
            }

            .topic button {
                margin-left: 5px;
                width: 120px;
                height: 30px;
                border-radius: 10px;
                background-color: #151D39;
                padding-top: 3px;
                margin-top: 5px;
                display: flex;
                font-size: 18px;
                text-decoration: none;
                border: none;
            }

        .thumbnail button {
            background-color: #151D39;
            display: flex;
            justify-content: center;
            align-items: center;
            place-self: center;
            border: none;
            border-radius: 10px;
            width: 120px;
            height: 30px;
        }
        #btnEdit{
            cursor:pointer;
        }
        .modal-header h2{
            display:flex;
            justify-content:center;
            color:black;
        }
        .modal-body {
            height: 380px;
            width: 500px;
            display: flex;
            justify-content: center;
            
            align-items: center;
        }
        .form-horizontal{
            display:flex;
            justify-content:center;
            flex-direction:column;
            align-items:center;
        }
        .col-md-10 {
            display: flex;
            flex-direction: column;
        }
        .col-md-10 input {
            width:150px;
            height:50px;
        }
        label{
            font-weight:bold;
        }
        .btn-back {
            background-color: #68C4F5;
            width: 180px;
            height: 55px;
            color: black;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size:18px;
        }
        .btn-save {
            background-color: #151D39;
            width: 180px;
            height: 55px;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 18px;
        }
        .btn-delete {
            background-color: #FF0000;
            width: 180px;
            height: 55px;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div class="topic">
        <h2>รายการสมาชิกช่าง</h2>
        <button type="submit">

            <span><img src="data:image/png;base64," /></span>
            <span>@Html.ActionLink("เพิ่มสมาชิก", "AddTech", null, new { style = "color: white; text-decoration: none;" })</span>
        </button>


    </div>

    <div class="section">
        @for (var i = 1; i <= Model.ToList().Count(); i++)
        {
            var indexItem = i - 1;
            if (i == 1 || i % 4 == 1)
            {
                @:<div class="row">
                }
                <div class="col-md-3">
                    <div class="thumbnail">
                        <img class="img-responsive" style="max-width: 70%; "
                             src=@Url.Content("~/Content/technician/" + (Model.ElementAt(indexItem).image)) />
                        <div class="caption">
                            <h5>ชื่อ: @Model.ElementAt(indexItem).technicianName </h5>
                            <h5>ช่างประเภท: @Model.ElementAt(indexItem).typeRepair </h5>
                            <h5>เบอร์โทรศัพท์: @Model.ElementAt(indexItem).phone </h5>


                        </div>
                        <button type='button' id='btnEdit' onclick='return getTechnicainById("@Model.ElementAt(indexItem).technician_Id")'>

                            <span><img src="data:image/png;base64," /></span>
                            <span style = "color: white; text-decoration: none;">แก้ไข</span>
                        </button>
                        <button type="button" id="btnDelete" onclick='return confirmdeleteTechnicianById("@Model.ElementAt(indexItem).technician_Id")'>

                            <span><img src="data:image/png;base64," /></span>
                            <span style = "color: white; text-decoration: none;">ลบสมาชิก</span>
                        </button>
                    </div>

                </div>
                if (i % 4 == 0)
                {
                @:</div>
            }
        }
    </div>

    <div id="empModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title"><label id="title"></label></h2>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="hidden" class="form-control" id="ID" />
                                <label>ชื่อ</label>
                                <input type="text" id="Name" class="form-control" />

                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <label>ช่างประเภท</label>
                                <input type="text" id="Type" class="form-control" />

                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="hidden" class="form-control" id="ID" />
                                <label>เบอร์โทรศัพท์</label>
                                <input type="text" id="Phone" class="form-control" />

                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="hidden" class="form-control" id="ID" />
                                <label>รูปโปรไฟล์</label>
                                <input type="text" id="Image" class="form-control" />

                            </div>

                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" id="btnClose" class="btn-back" data-dismiss="modal">ย้อนกลับ</button>
                    <button type="submit" id="btnSave" class="btn-save">บันทึก</button>
                </div>

            </div>

        </div>
</div>
        
        <!--Comfirmation modal-->
        <div id="confirmModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title"><label id="title"></label></h2>

                    </div>
                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="hidden" class="form-control" id="ID" />
                                    <label>ชื่อ</label>
                                    <input type="text" id="Name" class="form-control" />

                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <label>ช่างประเภท</label>
                                    <input type="text" id="Type" class="form-control" />

                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="hidden" class="form-control" id="ID" />
                                    <label>เบอร์โทรศัพท์</label>
                                    <input type="text" id="Phone" class="form-control" />

                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="hidden" class="form-control" id="ID" />
                                    <label>รูปโปรไฟล์</label>
                                    <input type="text" id="Image" class="form-control" />

                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnOK" class="btn btn-primary">OK</button>
                        <button type="button" id="btnCancel" class="btn btn-default" datadismiss="modal">Cancel</button>

                    </div>

                </div>

            </div>

        </div>


</body>
</html>
@section Scripts{
    
    <script src="~/Scripts/library/technichian.js"></script>
}
