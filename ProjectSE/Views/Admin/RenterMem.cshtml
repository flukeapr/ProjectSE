@model IEnumerable<ProjectSE.Models.Renter>

@{
    ViewBag.Title = "RenterMem";
    Layout = "~/Views/Shared/ViewAdmin_Layout.cshtml";
}
<html>
<head>

    <link href="~/Content/TechMember.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            overflow: hidden;
        }

        .topic {
            display: flex;
            align-items: center;
            margin-top: 80px;
            text-align: center;
        }

            .topic h2 {
                color: black;
            }

            .topic button {
                margin-left: 5px;
                width: 120px;
                height: 30px;
                border-radius: 10px;
                background-color: #151D39;
                padding-top: 3px;
                margin-top: 5px;
                display: flex;
                font-size: 18px;
                text-decoration: none;
                border: none;
            }

        .thumbnail button {
            background-color: #151D39;
            display: flex;
            justify-content: center;
            align-items: center;
            place-self: center;
            border: none;
            border-radius: 10px;
            width: 120px;
            height: 30px;
        }

        #btnEdit {
            cursor: pointer;
        }

        .modal-header h2 {
            display: flex;
            justify-content: center;
            color: black;
        }

        .modal-body {
            height: 380px;
            width: 500px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-horizontal {
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;
        }

        .col-md-10 {
            display: flex;
            flex-direction: column;
        }

            .col-md-10 input {
                width: 150px;
                height: 50px;
            }

        label {
            font-weight: bold;
        }

        .btn-back {
            background-color: #68C4F5;
            width: 180px;
            height: 55px;
            color: black;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 18px;
        }

        .btn-save {
            background-color: #151D39;
            width: 180px;
            height: 55px;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 18px;
        }

        .btn-delete {
            background-color: #FF0000;
            width: 180px;
            height: 55px;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div class="topic">
        <h2>รายการสมาชิกผู้พักอาศัย</h2>
        <button type="submit">

            <span><img src="data:image/png;base64," /></span>
            <span>@Html.ActionLink("เพิ่มสมาชิก", "", null, new { style = "color: white; text-decoration: none;" })</span>
        </button>


    </div>

    <div class="section">
        @for (var i = 1; i <= Model.ToList().Count(); i++)
        {
            var indexItem = i - 1;
            if (i == 1 || i % 4 == 1)
            {
                @:<div class="row">
                }
                <div class="col-md-3">
                    <div class="thumbnail">
                        <img class="img-responsive" style="max-width: 70%; "
                             src=@Url.Content("~/Content/Renter/user-profile.png") /> 
                        <div class="caption">
                            <h5>ชื่อ: @Model.ElementAt(indexItem).name </h5>
                            <h5>ช่างประเภท: @Model.ElementAt(indexItem).address </h5>
                            <h5>เบอร์โทรศัพท์: @Model.ElementAt(indexItem).phone </h5>


                        </div>
                        <button type='button' id='btnEdit' onclick='return getTechnicainById("@Model.ElementAt(indexItem).renter_Id")'>

                            <span><img src="data:image/png;base64," /></span>
                            <span style="color: white; text-decoration: none;">แก้ไข</span>
                        </button>
                        <button type="button" id="btnDelete" onclick='return confirmdeleteTechnicianById("@Model.ElementAt(indexItem).renter_Id")'>

                            <span><img src="data:image/png;base64," /></span>
                            <span style="color: white; text-decoration: none;">ลบสมาชิก</span>
                        </button>
                    </div>

                </div>
                if (i % 4 == 0)
                {
                @:</div>
            }
        }
    </div>
</body>
</html>
