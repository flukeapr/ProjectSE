@model ProjectSE.Models.Technician

@{
    ViewBag.Title = "AddTech";
    Layout = "~/Views/Shared/ViewAdmin_Layout.cshtml";
}
<html>
<head>
    <style>
        body{
            height:100vh;
           
           
        }
        .section{
            display:flex;
            margin:100px;
            flex-direction:column;
            justify-content:center;
        }
        .topic h2{
            text-align:center;
            font-size:28px;
            color:black;
        }
        .form-horizontal {
            margin: 20px 0 20px 0;
            display: grid;
            grid-template-columns: 400px 400px;
            grid-row-gap: 20px;
            font-weight: bold;
            justify-content: center;
        }

        .form-group {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            margin-bottom: 20px;
        }

        .form-control {
            width: 200px;
            height: 30px;
            border: 1px solid #000000;
            border-radius: 10px;
        }
        
        .btn-submit {
            display: flex;
            justify-content: center;
            background-color: #151D39;
            width: 150px;
            height: 50px;
            border: none;
            border-radius: 20px;
            font-size: 26px;
            color:white;
        }
        .btn-cancel {
            align-items:center;
            display: flex;
            justify-content: center;
            background-color: #68C4F5;
            width: 150px;
            height: 50px;
            border: none;
            border-radius: 20px;
            font-size: 26px;
            color: white;
            
        }
        .cancel {
            display: flex;
            justify-content: center;
            text-decoration: none;
        }
        .submit {
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="section">
        <div class="topic">
            <h2>เพิ่มสมาชิกช่าง</h2>
        </div>




        @using (Html.BeginForm("AddTech", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))

        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.technicianName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.technicianName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.technicianName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.typeRepair, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.typeRepair, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.typeRepair, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.phone, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.image, new { htmlAttributes = new { @class = "form-control", type = "file" } })
                @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="cancel">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn-cancel">
                    <span>@Html.ActionLink("ย้อนกลับ", "TechMember", "Admin",  new { style = "color: black; text-decoration: none;" })</span>
                </button>
            </div>
        </div>
        <div class="submit">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ยืนยัน" class="btn-submit" />
            </div>
        </div>

    </div>
        }

       
    </div>
</body>
</html>
