@model ProjectSE.Models.Renter
@{
    ViewBag.Title = "RenterDelete";
    Layout = "~/Views/Shared/ViewAdmin_Layout.cshtml";
}
<html>
<head>
    <style>
        body {
            height: 100vh;
        }

        .section {
            display: flex;
            margin: 100px;
            flex-direction: column;
            justify-content: center;
        }

        .topic h2 {
            text-align: center;
            font-size: 28px;
            color: black;
        }

        .form-horizontal {
            margin: 20px 0 20px 0;
            display: grid;
            grid-template-columns: 400px 400px;
            grid-row-gap: 20px;
            font-weight: bold;
            justify-content: center;
        }

        .techImage {
            display: flex;
            flex-direction: column-reverse;
            grid-column: span 2;
            justify-self: center;
            border: 1px solid #000000;
            max-width: 40%;
        }

            .techImage p {
                display: flex;
                justify-content: center;
            }

        .form-group {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 20px;
        }

        .form-control {
            margin-left: 10px;
            width: 200px;
            height: 30px;
            border: 1px solid #000000;
            border-radius: 10px;
        }

        .btn-submit {
            display: flex;
            justify-content: center;
            background-color: red;
            width: 150px;
            height: 50px;
            border: none;
            border-radius: 20px;
            font-size: 26px;
            color: white;
        }

        .btn-cancel {
            align-items: center;
            display: flex;
            justify-content: center;
            background-color: #68C4F5;
            width: 150px;
            height: 50px;
            border: none;
            border-radius: 20px;
            font-size: 26px;
            color: white;
        }

        .cancel {
            display: flex;
            justify-content: center;
            text-decoration: none;
        }

        .submit {
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="section">
        <div class="topic">
            <h2>ลบสมาชิกผู้พักอาศัย</h2>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.name)
                    @Html.DisplayFor(model => model.name)
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.address)
                    @Html.DisplayFor(model => model.address)
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.phone)
                    @Html.DisplayFor(model => model.phone)
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.room_Id)
                    @Html.DisplayFor(model => model.room_Id)
                </div>
                <div class="techImage">
                    <p>รูปโปรไฟล์</p>
                    <img src=@Url.Content("~/Content/Renter/user-profile.png") />
                </div>

                <div class="cancel">
                    <div class="col-md-offset-2 col-md-10">
                        <button class="btn-cancel">
                            <span>@Html.ActionLink("ย้อนกลับ", "RenterMem", "Admin", new { style = "color: black; text-decoration: none;" })</span>
                        </button>
                    </div>
                </div>
                <div class="submit">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="ลบ" class="btn-submit" />
                    </div>
                </div>
            </div>
        }

    </div>
</body>
</html>

