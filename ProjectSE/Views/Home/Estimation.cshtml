


@{
    ViewBag.Title = "Estimation";
    Layout = "~/Views/Shared/_Layout.cshtml";

   
}
<html>
<head>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <style>
        body {
            height: 100vh;
        }

        .es {
            margin-top: 100px;
           
           
        }
        .topic-estimate {
            width: 300px;
            height: 50px;
            background-color: #151D39;
            display: flex;
            justify-content:center;
            align-items: center;
            border-radius:20px;
        }
            .topic-estimate h2 {
                display: flex;
                justify-content: center;
                
                align-items: center;
                color: white;
               

            }

        .tech h2, h3 {
            color: black;
            display: flex;
            justify-content: center;
        }

        .tech {
            display: flex;
            justify-content: center;
            flex-direction: column;
        }

        .btn-cancel {
            width: 150px;
            height: 50px;
            border: none;
            border-radius: 20px;
            background-color: #68C4F5;
            font-size: 26px;
            color: black;
        }

        .btn-submit {
            width: 150px;
            height: 50px;
            border: none;
            border-radius: 20px;
            background-color: #151D39;
            font-size: 26px;
            color: white;
        }

        .btn {
            display: flex;
            justify-content: space-around;
            width:700px;
        }

        .star {
            display: flex;
            justify-content: center;
        }

        .middle {
            margin: 0 40px 0 40px;
        }

        .topic-estimate, .tech, .star, .btn {
            margin-bottom: 60px;
        }

            .star svg:hover {
                fill: yellow;
            }


        .rating-container {
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-pack: justify;
            -ms-flex-pack: justify;
            justify-content: center;
            
            width: 100%;
        }

        .rating-text p {
            color: rgba(0, 0, 16, 0.8);
            font-size: 1.3rem;
            padding: 0.3rem;
        }

        .rating {
            background-color: rgba(0, 0, 16, 0.8);
            padding: 0.4rem 0.4rem 0.1rem 0.4rem;
            border-radius: 2.2rem;
            margin: 20px;
        }
        .rating-form{
            display:flex;
            flex-direction:column;
            justify-content:center;
            align-items:center;
        }
        svg {
            fill: rgb(242, 242, 242);
            height: 3.6rem;
            width: 3.6rem;
            margin: 0.2rem;
        }

        .rating-form-2 svg {
            height: 3rem;
            width: 3rem;
            margin: 0.5rem;
        }

        #radios label {
            position: relative;
        }

        input[type="radio"] {
            position: absolute;
            opacity: 0;
        }

            input[type="radio"] + svg {
                -webkit-transition: all 0.2s;
                transition: all 0.2s;
            }

        input + svg {
            cursor: pointer;
        }

        input[class="super-happy"]:hover + svg,
        input[class="super-happy"]:checked + svg,
        input[class="super-happy"]:focus + svg {
            fill: rgb(0, 109, 217);
        }

        input[class="happy"]:hover + svg,
        input[class="happy"]:checked + svg,
        input[class="happy"]:focus + svg {
            fill: rgb(0, 204, 79);
        }

        input[class="neutral"]:hover + svg,
        input[class="neutral"]:checked + svg,
        input[class="neutral"]:focus + svg {
            fill: rgb(232, 214, 0);
        }

        input[class="sad"]:hover + svg,
        input[class="sad"]:checked + svg,
        input[class="sad"]:focus + svg {
            fill: rgb(229, 132, 0);
        }

        input[class="super-sad"]:hover + svg,
        input[class="super-sad"]:checked + svg,
        input[class="super-sad"]:focus + svg {
            fill: rgb(239, 42, 16);
        }
        .Estimation{
            display:flex;
            justify-content:center;
            flex-direction:column;
            align-items:center;
           
        }
        .des-text {
            color: white;
            background-color: #151D39;
            width:200px;
            height:40px;
            display:flex;
            justify-content:center;
            align-items:center;
            font-size:18px;
            border-radius:10px;
            margin:20px;
        }
        .des-text h4 {
            
        }
        .detail-text{
            display:flex;
            justify-content:center;
        }
    </style>

</head>
<body>
   
    <div class="es">
        <div class="Estimation">


            @if (ViewBag.Estatus == "รอประเมิน")
            {
                <div class="topic-estimate">
                    <h2>ประเมินความพึงพอใจ</h2>
                </div>
                <div class="tech">
                    <h2>ชื่อช่าง :@ViewBag.Technician</h2>
                    <h3>เบอร์ :@ViewBag.Phone</h3>
                </div>
                <form class="rating-form" id="estimationForm" action="@Url.Action("Estimation", "Home", new { id = @ViewBag.EstimateId })" method="post">
                    <div class="des-text">
                        <h4 for="des-text" >คำอธิบายการซ่อม</h4>
                    </div>
                    
                    <div class="des">
                        <textarea rows="10" cols="50" name="desText" style=" resize: none;"></textarea>
                    </div>

                    <div class="card">
                        <div class="rating-container">

                            <div class="rating">




