@model ProjectSE.Models.Repair

@{
    ViewBag.Title = "MenuRepair";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        main {
            height: calc(100vh - 200px);
            align-items: center;
            display: flex;
            justify-content: center;
            flex-direction: column;
        }
        .form-horizontal {
            margin:20px 0  20px 0;
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-column-gap:20px;
           grid-row-gap:20px;
           font-weight:bold;
        }
        .form-group {
            display: flex;
            justify-content:flex-end;
            align-items: center;
            margin-bottom: 20px;
        }
        .form-control {
            width: 200px;
            height: 30px;
            border:1px solid #000000;
            border-radius:10px;
           
        }
        .btn-submit {
            display: flex;
            justify-content: center;
            background-color: #68C4F5;
            width: 250px;
            height: 50px;
            border:none;
            border-radius:20px;
            font-size:20px;

        }
        .submit{
            display:flex;
            justify-content:center;
        }
        #file {
            
            display: flex;
            align-items: center;
        }
    </style>

    <!-- jQuery -->
    <script src="~/Scripts/jquery-3.4.1.js"></script>

    <!-- jQuery UI JavaScript -->
    <script src="~/Content/themes/jquery-ui-1.12.1.custom/jquery-ui.js"></script>

    <link href="~/Content/themes/jquery-ui-1.12.1.custom/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/themes/jquery-ui-1.12.1.custom/jquery-ui.css" rel="stylesheet" />
    <!-- jQuery UI CSS -->

    <link href="~/Content/themes/jquery.timepicker.min.css" rel="stylesheet" />

    
   





</head>

<body>
    <main>
        <div class="head">
            <h2 style="color:black">หน้าแจ้งซ่อมห้องพัก</h2>
        </div>




        @using (Html.BeginForm("MenuRepair", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))

        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.nameInform, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nameInform, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nameInform, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.topicRepair, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.topicRepair, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.topicRepair, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.typeRepair, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.typeRepair, new SelectList(Model.selectedTypeRepair), "เลือกประเภทการซ่อม", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.typeRepair, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.details, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.details, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.details, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.picture, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" >
                        @Html.EditorFor(model => model.picture, new { htmlAttributes = new { @class = "form-control", type = "file" , id="file"} })
                        @Html.ValidationMessageFor(model => model.picture, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.phone, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.date, new { @class = "form-control", placeholder = "เลือกวันที่ต้องการซ่อม", id = "datepicker" })
                        @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.time, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.time, new { htmlAttributes = new { @class = "form-control", placeholder = "เลือกเวลาที่ต้องการซ่อม", id = "timepicker" } })
                        @Html.ValidationMessageFor(model => model.time, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.roomId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.roomId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.roomId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.building_name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.building_name, new SelectList(Model.selectedbuilding_Name), "เลือกตึก", new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.building_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.floor, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">

                        @Html.DropDownListFor(model => model.floor, new SelectList(Model.selectedFloor), "เลือกชั้น", new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.floor, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>
            <div class="submit">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="ส่งแจ้งรับบริการ" class="btn-submit" />
                </div>
            </div>
        }
    </main>




</body>
</html>
@section scripts{


    <script src="~/Content/themes/jquery.timepicker.min.js"></script>
    <script src="~/Content/themes/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker({
                dateFormat: "yy-mm-dd",
                showButtonPanel: true,
                changeMonth: true,
                changeYear: true
            });

        });


    </script>

    <script>
        $(function () {
            $("#timepicker").timepicker({ 'minTime': '4:00am', 'timeFormat': 'H:i' });

        });


    </script>

}
