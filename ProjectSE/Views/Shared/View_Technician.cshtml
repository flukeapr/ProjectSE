
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar.navbar-fixed-top {
            background: linear-gradient(135deg, #101FA7, #10E3E3);
            color: white;
            padding: 10px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
        }

        body {
            display: flex;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        .container.body-content {
            flex-grow: 1;
            overflow-y: auto;
            padding: 15px;
            position: relative;
            top: 0;
            left: 0;
        }

        .container h2 {
            color: white;
            left: 10px;
            text-align: left;
        }






        aside {
            top: 70px;
            left: 0;
            right: 0;
            background: #76767A;
            width: 200px;
            height: 900px;
            position: sticky;
            bottom: 0;
            height: calc(100vh - 70px);
        }

        .menu span {
            padding: 15px 0 0 0;
            display: flex;
            flex-direction: row;
        }

        .menu a {
            font-size: 22px;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            display: flex;
            align-items: center;
        }

            li a {
                color: white;
                text-decoration: none;
            }

            li span {
                margin-left: 10px;
            }

        .menu li.clicked {
            background-color: #68C4F5;
        }

        .log-off {
            margin-top: 590px;
            display: flex;
            justify-content: center;
            flex-direction: row;
            padding-top: 5px;
            text-align: center;
            font-size: 28px;
            width: 200px;
            height: 60px;
            background: #101FA7;
        }



            .log-off a {
                margin-top: 5px;
                display: flex;
                color: white;
                text-decoration: none;
            }
    </style>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container ">
            <h2 class="text-left">ระบบแจ้งซ่อมหอพักจารุนันท์</h2>
        </div>
    </div>

    <aside>
        <div class="menu">
            <ul>
                <li>
                    <a href="#">
                        <span><box-icon type='solid' name='home'></box-icon></span>
                        <span>@Html.ActionLink("หน้าหลัก", "Index", "Technician")</span>
                    </a>

                </li>
                <li>
                    <a href="#">
                        <span><box-icon name='file'></box-icon></span>
                        <span>@Html.ActionLink("รายการซ่อม", "ListRepairTech", "Technician")</span>
                    </a>

                </li>
                <li>
                    <a href="#">
                        <span><box-icon name='archive-in'></box-icon></span>
                        <span>@Html.ActionLink("ประวัติรายการ", "AllRepairTech", "Technician")</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span><box-icon name='objects-vertical-bottom'></box-icon></span>
                        <span>@Html.ActionLink("รายงาน", "ReportTech", "Technician")</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="log-off">

            <a href="#">
                <span> <img src="data:image/png;base64," /> </span>
                <span>@Html.ActionLink("ออกจากระบบ", "LogOff", "Accounts")</span>
            </a>



        </div>

    </aside>
    <div class="container body-content">
        @RenderBody()

    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var menuItems = document.querySelectorAll('.menu li');

            menuItems.forEach(function (item) {
                item.addEventListener('click', function () {
                    menuItems.forEach(function (otherItem) {
                        otherItem.classList.remove('clicked');
                    });

                    item.classList.add('clicked');

                    // เก็บข้อมูลสถานะคลิกใน session storage
                    sessionStorage.setItem('clickedItem', item.textContent.trim());
                });
            });

            // ตรวจสอบ session storage เมื่อโหลดหน้า
            var clickedItemText = sessionStorage.getItem('clickedItem');
            if (clickedItemText) {
                menuItems.forEach(function (item) {
                    if (item.textContent.trim() === clickedItemText) {
                        item.classList.add('clicked');
                    }
                });
            }
        });
    </script>





    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
